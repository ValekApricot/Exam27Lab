<Page x:Class="_11PageTorgovaiBasa.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_11PageTorgovaiBasa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Название продукта:"/>
            <TextBox x:Name="ProductNameTextBox"/>
            <Label Content="Описание продукта:"/>
            <TextBox x:Name="ProductDescriptionTextBox"/>
            <Label Content="Стоимость продукта:"/>
            <TextBox x:Name="ProductPriceTextBox"/>
            <Button Content="Добавить продукт" Click="AddProductButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

