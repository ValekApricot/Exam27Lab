<Page x:Class="_16PageMebelniSalon.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_16PageMebelniSalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="productNameTextBox"/>
            <TextBlock Text="Категория:"/>
            <ComboBox x:Name="categoryComboBox">
                <ComboBoxItem>Изделия из пшена</ComboBoxItem>
                <ComboBoxItem>Сладости</ComboBoxItem>
                <ComboBoxItem>Мясо</ComboBoxItem>
                <ComboBoxItem>Рыба</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Цена:"/>
            <TextBox x:Name="priceTextBox"/>
            <TextBlock Text="Колличесвто:"/>
            <TextBox x:Name="quantityTextBox"/>
            <Button Content="Добавить продукт" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>

